@using Nest.Models

@model Product
<div class="container mb-5">
    <h1>Update</h1>
    <form method="post" class="pb-5">
        <div class="form-group col-md-3">
            <label asp-for="Name">Name</label>
            <input class="form-control" placeholder="Enter name" asp-for="Name">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Description">Description</label>
            <input class="form-control" placeholder="Enter desc" asp-for="Description">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="InStock">InStock</label>
            <input class="form-control" placeholder="Enter InStock" asp-for="InStock">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Price">Price</label>
            <input class="form-control" placeholder="Enter Price" asp-for="Price">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>